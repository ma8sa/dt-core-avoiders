<launch>
	<arg name="veh"/>
	<arg name="param_file_name" default="default" doc="Specify a param file. ex:megaman"/>
	<arg name="param_file_name_wheels_driver_node" default="default" doc="Specify a param file. ex:megaman"/>
	<arg name="pkg_name" default="avoiders" doc="name of the package"/>
	<arg name="node_name" default="avoid_obstacle" doc="name of the node"/>
	<arg name="node_name_2" default="detect_obstacle" doc="name of the node"/>

        <group ns="$(arg veh)">
	    <node  pkg="$(arg pkg_name)" type="$(arg node_name).py" name="$(arg node_name)" output="screen">
	    </node>
	    <node  pkg="$(arg pkg_name)" type="$(arg node_name).py" name="$(arg node_name_2)" output="screen">
	    </node>
	</group>

</launch>
